# Supabase
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Admin access (comma-separated Supabase user UUIDs)
ADMIN_USER_IDS=uuid-1,uuid-2

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=email.jellyjelly.com

# Security
UNSUBSCRIBE_SECRET=<generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
DIGEST_API_SECRET=<shared-secret-for-weekly-digest-automation>

# AI Email Composition (choose one provider)
# Option 1: AWS Bedrock (preferred)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# Option 2: Direct Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Mailgun Webhooks
MAILGUN_WEBHOOK_SIGNING_KEY=your-mailgun-webhook-signing-key

# Site
SITE_URL=https://jellyjelly.com

# Jelly API (for re-engagement outcome tracking)
JELLY_API_URL=https://api.jellyjelly.com
